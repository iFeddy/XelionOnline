; xkl
open [main]
    var InterruptBlock	1
		InterruptArg	2
		Monster	0.
	
	call "ServersFirstSummon".
    infinite
    open
        waitinterrupt InterruptBlock "InterruptArg".
        call InterruptBlock "Default".
    close
close
; --------------------------------------------------------------------- ;
open [ServersFirstSummon]
	var RndNum 0.
        RndNum = @Random(1 3).
        
        if RndNum === "1"
        then open
			mobregen Monster "FireRubyGuardian-U" 17121	2034 0 1000 "Normal".
			interruptset DeadHandle "" 1 Monster "Reload".
        close
        
        else if RndNum === "2"
        then open
			mobregen Monster "DiamondTree" 3317	12011 0 1000 "Normal".
			interruptset DeadHandle "" 1 Monster "Reload".
        close
		
		else if RndNum === "3"
        then open
			mobregen Monster "GiantMagmaton" 2237	17318 0 1000 "Normal".
			interruptset DeadHandle "" 1 Monster "Reload".
        close
close
; --------------------------------------------------------------------- ;
open [RandomSummon]
	XCoord = @Random(1699 24435).
	YCoord = @Random(1261 23854).	
	
	var RndNum 0.
        RndNum = @Random(1 3).
        
        if RndNum === "1"
        then open
			mobregen Monster "FireRubyGuardian-U" XCoord	YCoord 0 1000 "Normal".
			interruptset DeadHandle "" 1 Monster "Reload".
        close
        
        else if RndNum === "2"
        then open
			mobregen Monster "DiamondTree" XCoord	YCoord 0 1000 "Normal".
			interruptset DeadHandle "" 1 Monster "Reload".
        close
		
		else if RndNum === "3"
        then open
			mobregen Monster "GiantMagmaton" XCoord	YCoord 0 1000 "Normal".
			interruptset DeadHandle "" 1 Monster "Reload".
        close
close
; --------------------------------------------------------------------- ;
open [Reload]
	pause sec 900.
	call "RandomSummon".
close