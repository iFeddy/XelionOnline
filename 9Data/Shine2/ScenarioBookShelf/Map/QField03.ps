; xkl
open [main]
    var InterruptBlock	1
		InterruptArg	2
		Monster	0
		FireGolemChest01	0
		FireGolemChest02	0
		FireGolemChest03	0
		FireGolemChest04	0
		FireGolemChest05	0.
	
	call "ServersFirstSummon".
    infinite
    open
        waitinterrupt InterruptBlock "InterruptArg".
        call InterruptBlock "Default".
    close
close
; --------------------------------------------------------------------- ;
open [ServersFirstSummon]
	mobregen Monster "FireGolem" 466	458 0 1000 "Normal".
	interruptset DeadHandle "" 1 Monster "FireGolemChest".
close
; --------------------------------------------------------------------- ;
open [FireGolemChest]
	mobregen FireGolemChest01 "FireGolemBox1" 466	458 0 1000 "Normal".
	mobregen FireGolemChest02 "FireGolemBox1" 466	458 0 1000 "Normal".
	mobregen FireGolemChest03 "FireGolemBox1" 466	458 0 1000 "Normal".
	mobregen FireGolemChest04 "FireGolemBox1" 466	458 0 1000 "Normal".
	mobregen FireGolemChest05 "FireGolemBox1" 466	458 0 1000 "Normal".
	
		var RndNum 0.
        RndNum = @Random(1 5).

        if RndNum === "1"
        then open
			interruptset DeadHandle "" 1 FireGolemChest01 "DropSkin".
        close
        
        else if RndNum === "2"
        then open
			interruptset DeadHandle "" 1 FireGolemChest02 "DropSkin".
        close
		
		else if RndNum === "3"
