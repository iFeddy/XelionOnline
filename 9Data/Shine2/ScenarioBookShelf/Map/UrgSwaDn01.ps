; xkl
open [main]
    var InterruptBlock	1
		InterruptArg	2
		Monster	0
		XCoord	0
		YCoord	0.
	
	call "ServersFirstSummon".
    infinite
    open
        waitinterrupt InterruptBlock "InterruptArg".
        call InterruptBlock "Default".
    close
close
; --------------------------------------------------------------------- ;
open [ServersFirstSummon]
	mobregen Monster "ShadowMaster" 5662	2275 0 1000 "Normal".
	interruptset DeadHandle "" 1 Monster "Reload".
close
; --------------------------------------------------------------------- ;
open [RandomSummon]
	XCoord = @Random(1179 10091).
	YCoord = @Random(735 11560).

	mobregen Monster "ShadowMaster" XCoord	YCoord 0 1000 "Normal".
	interruptset DeadHandle "" 1 Monster "Reload".
close
; --------------------------------------------------------------------- ;
open [Reload]
	pause sec 900.
	call "RandomSummon".
close