; xkl
open [main]
    var InterruptBlock	1
		InterruptArg	2
		Monster	0
		XCoord	0
		YCoord	0.
	
	call "ServersFirstSummon".
    infinite
    open
        waitinterrupt InterruptBlock "InterruptArg".
        call InterruptBlock "Default".
    close
close
; --------------------------------------------------------------------- ;
open [ServersFirstSummon]
	mobregen Monster "D_Zombieking" 1922	6975 0 1000 "Normal".
	interruptset DeadHandle "" 1 Monster "Reload".
close
; --------------------------------------------------------------------- ;
open [RandomSummon]
	XCoord = @Random(1708 18307).
	YCoord = @Random(1958 18320).

	mobregen Monster "D_Zombieking" XCoord	YCoord 0 1000 "Normal".
	interruptset DeadHandle "" 1 Monster "Reload".
close
; --------------------------------------------------------------------- ;
open [Reload]
	pause sec 900.
	call "RandomSummon".
close