; xkl
open [main]
    var InterruptBlock	1
		InterruptArg	2
		Monster	0
		XCoord	0
		YCoord	0.
	
	call "ServersFirstSummon".
    infinite
    open
        waitinterrupt InterruptBlock "InterruptArg".
        call InterruptBlock "Default".
    close
close
; --------------------------------------------------------------------- ;
open [ServersFirstSummon]
	mobregen Monster "D_Harpy" 6136	527 0 1000 "Normal".
	interruptset DeadHandle "" 1 Monster "Reload".
close
; --------------------------------------------------------------------- ;
open [RandomSummon]
	XCoord = @Random(207 12058).
	YCoord = @Random(311 12066).

	mobregen Monster "D_Harpy" XCoord	YCoord 0 1000 "Normal".
	interruptset DeadHandle "" 1 Monster "Reload".
close
; --------------------------------------------------------------------- ;
open [Reload]
	pause sec 900.
	call "RandomSummon".
close