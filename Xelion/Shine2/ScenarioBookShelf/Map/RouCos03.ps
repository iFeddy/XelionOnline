; xkl
open [main]
    var InterruptBlock	1
		InterruptArg	2
		Monster	0
		XCoord	0
		YCoord	0.
	
	call "ServersFirstSummon".
    infinite
    open
        waitinterrupt InterruptBlock "InterruptArg".
        call InterruptBlock "Default".
    close
close
; --------------------------------------------------------------------- ;
open [ServersFirstSummon]
	mobregen Monster "Mara" 13559	17119 0 1000 "Normal".
	interruptset DeadHandle "" 1 Monster "Reload".
close
; --------------------------------------------------------------------- ;
open [RandomSummon]
	XCoord = @Random(5903 20195).
	YCoord = @Random(3049 18419).

	mobregen Monster "Mara" XCoord	YCoord 0 1000 "Normal".
	interruptset DeadHandle "" 1 Monster "Reload".
close
; --------------------------------------------------------------------- ;
open [Reload]
	pause sec 900.
	call "RandomSummon".
close